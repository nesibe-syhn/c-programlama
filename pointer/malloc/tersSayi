#include <stdio.h>
#include <stdlib.h>

void ters(int *p, int n);

int main(){
    int n;
    printf("kac elemanli olucagini giriniz\n");
    scanf("%d", &n);
    int *p = (int *) malloc (n * sizeof(int));

    printf("dizinin elemanlirini giriniz\n");
    for (int i = 0; i < n; i++){
        printf("%d. eleman = ", i + 1);
        scanf("%d", &p[i]);
        printf("\n");
    }

    ters(p , n);    
    free(p);

    system("pause");
    return 0;
}

void ters(int *p, int n){
    int temp = *p;
    for (int i = 0; i < (n / 2); i++){
        temp = *(p + i);
        *(p + i ) = *(p + ((n - 1) - i));
        *(p + n - 1 - i) = temp;
    }

    for (int i = 0; i < n; i++){
        printf("%d. sayi = %d\n", i + 1, *(p + i));
    }
}
